{
	"name": "carrooi/nette-menu",
	"type": "library",
	"description": "Menu for Nette framework",
	"keywords": ["nette", "menu", "control", "component", "breadcrumbs"],
	"homepage": "https://github.com/Carrooi/Nette-Menu",
	"license": "MIT",
	"authors": [
		{
			"name": "David Kudera",
			"homepage": "http://davidkudera.com",
			"email": "kudera.d@gmail.com"
		}
	],
	"support": {
		"issues": "https://github.com/Carrooi/Nette-Menu/issues"
	},
	"require": {
		"php": ">=7.1",
		"nette/di": "^3.0",
		"nette/utils": "^3.0",
		"nette/application": "^3.0",
		"nette/http": "^3.0"
	},
	"require-dev": {
		"nette/tester": "^2.1",
		"mockery/mockery": "dev-master",
		"ninjify/coding-standard": "^0.9.0"
	},
	"autoload": {
		"psr-0": {
			"Carrooi\\Menu\\": "src/"
		}
	},
	"scripts": {
		"tests": "vendor/bin/tester -s -p php -c tests/php.ini tests/CarrooiTests/Menu/",
		"phpcs": "vendor/bin/phpcs --standard=vendor/ninjify/coding-standard/ruleset-gamee.xml --extensions=php,phpt --tab-width=4 -sp src tests",
		"phpcsfix": "vendor/bin/phpcbf --standard=vendor/ninjify/coding-standard/ruleset-gamee.xml --extensions=php,phpt --tab-width=4 -sp src tests"
	}
}
